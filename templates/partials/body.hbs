<body>
    {{> header}}

    <div class="main-content">
        <form>
            <div class="d-flex flex-row-reverse align-items-left">
                <div class="col-sm-4 col-md-4">
                    <label for="inputBook" class="form-label">Use this site to search for free books!</label>
                    <input class="p-2" type="text" placeholder="The theory of everything" class="form-control"
                        id="inputBook">
                    <button class="p-2" type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
            <div class="d-flex flex-row-reverse align-items-center">
                <div class="col-sm-4 col-md-4">
                    <p id="message-1"></p>
                </div>
            </div>
        </form>
    </div>

    <main role="main">
        <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each data}}
        <div class="col-4">
            <div class="card">
                <img src="{{this.imgSrc}}" width="150px" height="330px" class="card-img-top" alt="book cover">
                <div class="card-body">
                    <h5 class="card-title">{{this.bookName}}</h5>
                    <p class="card-text">Placeholder Placeholder Placeholder Placeholder Placeholder Placeholder Placeholder Placeholder Placeholder</p>
                   <p class="card-text"><a href={{this.bookLink}} class="btn btn-primary my-2">Download</a></p>
                </div>
            </div>
        </div>
        {{/each}}
        </div>
    </main>
    {{> footer}}
    <!--<script src="/js/showBooks.js"></script> -->
</body>