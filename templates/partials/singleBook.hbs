<div class="row">
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <img class="card-img-top" src={{imgSrc}}>
            <div class="card-body">
                <h5 class="card-title">{{bookName}}</h5>
                <p class="card-text">{{bookDescription}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href={{bookLink}} class="btn btn-primary my-2">Completo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>